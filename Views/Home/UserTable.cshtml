@using EmployeeControlService.Entities;

@model UserInfo

<h2>User Information</h2>
<br />
<div class="form-group">
    <label>Name:</label>
    <p>@Model.Name</p>
</div>

<div class="form-group">
    <label>Surname:</label>
    <p>@Model.Surname</p>
</div>

<div class="form-group">
    <label>Login Email:</label>
    <p>@Model.LoginEmail</p>
</div>

<div class="form-group">
    <label>Role:</label>
    <p>@Model.Role</p>
</div>

<div class="form-group">
    <label>Performance:</label>
    <p>@Model.PerformanceScore</p>
</div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var performanceScore = parseFloat("@Model.PerformanceScore");

            if (performanceScore <= 2.5) {
                alert("Your performance is: @Model.PerformanceScore, please contract the HR for more information ");
            }
        });
    </script>
