@model UserInfoModel

@{
    ViewData["Title"] = "Create User";
}

<h2>@ViewBag.Title</h2>
<br />
@using (Html.BeginForm("CreateUser", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="width: 250px">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group" style="width: 250px">
        @Html.LabelFor(model => model.Surname)
        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })
    </div>

    <div class="form-group" style="width: 250px">
        @Html.LabelFor(model => model.LoginEmail)
        @Html.TextBoxFor(model => model.LoginEmail, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group" style="width: 250px">
        @Html.LabelFor(model => model.Password)
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" , required = "required" })
    </div>

    <div class="form-group" style="width: 250px">
        @Html.LabelFor(model => model.Role)
        @Html.TextBoxFor(model => model.Role, new { @class = "form-control" , required = "required" })
    </div>
    <br />
    <input type="submit" value="Create User" class="btn btn-primary" />

}